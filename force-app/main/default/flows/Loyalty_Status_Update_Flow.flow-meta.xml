        <rules>
            <name>Gold_Tier</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Loop_Through_Customers.Total_Purchases__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
