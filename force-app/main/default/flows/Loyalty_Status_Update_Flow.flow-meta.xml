                <rightValue>
                    <numberValue>500.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_to_Bronze</targetReference>
            </connector>
            <label>Bronze Tier</label>
        </rules>
    </decisions>
